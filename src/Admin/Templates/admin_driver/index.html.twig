{% extends '@admin/dashboard.html.twig' %}

{% block title %}Panel administratora - Kierowcy | {{ parent() }}{% endblock %}

{% block admin_content %}
    <h3 class="text-center mt-4 mb-5">Zarządzanie kierowcami</h3>
    <div class="card bg-dark mb-5">
        <div class="card-body">
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Numer samochodu</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    {% for driver in drivers %}
                        <tr>
                            <td>{{ driver.id }}</td>
                            <td>{{ driver.name }}</td>
                            <td>{{ driver.surname }}</td>
                            <td>{{ driver.carNumber }}</td>
                            <td>
                                <a class="btn btn-outline-success" href="{{ path('driver_show', {'id': driver.id}) }}">Wyświetl</a>
                                <a class="btn btn-outline-info" href="{{ path('driver_edit', {'id': driver.id}) }}">Edycja</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
