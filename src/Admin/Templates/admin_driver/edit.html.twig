{% extends '@admin/dashboard.html.twig' %}

{% block title %}Panel administratora - Kierowcy | {{ parent() }}{% endblock %}

{% block admin_content %}
    <h3 class="text-center mt-4 mb-5">Edycja kierowcy</h3>
    <div class="card bg-dark mb-5">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'text-white'}}) }}
                <div class="admin-form-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="form-group mb-3">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control mt-1'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.surname) }}
                        {{ form_widget(form.surname, {'attr': {'class': 'form-control mt-1'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.carNumber) }}
                        {{ form_widget(form.carNumber, {'attr': {'class': 'form-control mt-1'}}) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(form.teamId) }}
                        {{ form_widget(form.teamId, {'attr': {'class': 'form-control form-select mt-1'}}) }}
                    </div>
                </div>

                <button class="btn btn-success mt-2">{{ button_label|default('Zapisz') }}</button>
            {{ form_end(form) }}
        </div>
    </div>

    <a href="{{ path('driver_index') }}" class="btn btn-dark">back to list</a>
{% endblock %}
