{% extends 'base.html.twig' %}

{% block title %}F1Simulator - Rejestracja{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="container">
            {% for message in app.flashes('auth_success') %}
                <div class="auth-alert auth-alert-success mb-5">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="row justify-content-center align-items-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="auth-card">
                        <div class="auth-header">
                            <h1 class="auth-title">
                                <i class="fas fa-flag-checkered"></i> Rejestracja
                            </h1>
                            <p class="auth-subtitle">Dołącz do F1 Simulator i rozpocznij swoją przygodę!</p>
                        </div>

                        <div class="auth-form-container">
                            {{ form_start(registrationForm) }}

                            <!-- Username field -->
                            <div class="auth-form-group">
                                <label class="auth-form-label" for="{{ registrationForm.username.vars.id }}">
                                    <i class="fas fa-user"></i> Nazwa użytkownika
                                </label>
                                {{ form_widget(registrationForm.username, {
                                    'attr': {
                                        'class': 'auth-form-control',
                                        'placeholder': 'Wprowadź nazwę użytkownika'
                                    }
                                }) }}
                                <div class="auth-form-error text-sm mt-2">
                                    {{ form_errors(registrationForm.username) }}
                                </div>
                            </div>

                            <!-- Email field -->
                            <div class="auth-form-group">
                                <label class="auth-form-label" for="{{ registrationForm.email.vars.id }}">
                                    <i class="fas fa-envelope"></i> Adres email
                                </label>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'auth-form-control',
                                        'placeholder': 'Wprowadź adres email'
                                    }
                                }) }}
                                <div class="auth-form-error text-sm mt-2">
                                    {{ form_errors(registrationForm.email) }}
                                </div>
                            </div>

                            <!-- Password field -->
                            <div class="auth-form-group">
                                <label class="auth-form-label" for="{{ registrationForm.plainPassword.first.vars.id }}">
                                    <i class="fas fa-lock"></i> Hasło
                                </label>
                                <div class="input-group password-group">
                                    {{ form_widget(registrationForm.plainPassword.first, {
                                        'attr': {
                                            'class': 'auth-form-control form-control password-input',
                                            'placeholder': 'Wprowadź hasło (minimum 12 znaków)'
                                        }
                                    }) }}
                                    <span class="input-group-text toggle-password">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                                <div class="auth-form-error text-sm mt-2">
                                    {{ form_errors(registrationForm.plainPassword.first) }}
                                </div>
                            </div>

                            <!-- Repeat password -->
                            <div class="auth-form-group">
                                <label class="auth-form-label" for="{{ registrationForm.plainPassword.second.vars.id }}">
                                    <i class="fas fa-lock"></i> Powtórz hasło
                                </label>
                                <div class="input-group password-group">
                                    {{ form_widget(registrationForm.plainPassword.second, {
                                        'attr': {
                                            'class': 'auth-form-control form-control password-input',
                                            'placeholder': 'Wprowadź hasło (minimum 12 znaków)'
                                        }
                                    }) }}
                                    <span class="input-group-text toggle-password">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                                <div class="auth-form-error text-sm mt-2">
                                    {{ form_errors(registrationForm.plainPassword.second) }}
                                </div>
                                {% if form_errors(registrationForm.plainPassword) %}
                                    <div class="auth-form-error text-sm mt-2">
                                        {{ form_errors(registrationForm.plainPassword) }}
                                    </div>
                                {% endif %}
                            </div>

                            <button type="submit" name="submit_button" class="btn auth-btn">
                                <i class="fas fa-flag-checkered"></i> Zarejestruj się
                            </button>
                            {{ form_end(registrationForm) }}

                            <div class="login-link">
                                <p>Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('assets/js/app/TogglePassword.js') }}"></script>
{% endblock %}
