{% extends 'base.html.twig' %}

{% block title %}F1Simulator - {{ 'login.title'|trans({}, 'front') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="auth-card">
                        <div class="auth-header">
                            <h1 class="auth-title">
                                <i class="fas fa-sign-in-alt"></i> {{ 'login.header'|trans({}, 'front') }}
                            </h1>
                            <p class="auth-subtitle">{{ 'login.subtitle'|trans({}, 'front') }}</p>
                        </div>

                        <div class="auth-form-container">
                            <form method="post">
                                {% if error %}
                                    <div class="alert alert-danger mb-4">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-4 p-3 bg-success text-white rounded">
                                        <i class="fas fa-check-circle"></i>
                                        {{ 'login.already_logged_in_as'|trans({'%username%': app.user.username}, 'front') }},
                                        <a href="{{ path('app_logout') }}" class="text-white font-weight-bold">{{ 'login.logout'|trans({}, 'front') }}</a>
                                    </div>
                                {% endif %}

                                <div class="auth-form-group">
                                    <label class="auth-form-label" for="inputUsername">
                                        <i class="fas fa-user"></i> {{ 'login.username'|trans({}, 'front') }}
                                    </label>
                                    <input type="text" 
                                           value="{{ last_username }}" 
                                           name="_username" 
                                           id="inputUsername" 
                                           class="auth-form-control"
                                           placeholder="{{ 'login.username_placeholder'|trans({}, 'front') }}"
                                           required 
                                           autofocus>
                                </div>

                                <div class="auth-form-group">
                                    <label class="auth-form-label" for="inputPassword">
                                        <i class="fas fa-lock"></i> {{ 'login.password'|trans({}, 'front') }}
                                    </label>
                                    <div class="input-group password-group">
                                        <input type="password"
                                               name="_password"
                                               id="inputPassword"
                                               class="auth-form-control form-control password-input"
                                               placeholder="{{ 'login.password_placeholder'|trans({}, 'front') }}"
                                               required>
                                        <span class="input-group-text toggle-password">
                                            <i class="fas fa-eye"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="auth-checkbox form-check">
                                        <input type="checkbox"
                                               name="_remember_me"
                                               id="_remember_me"
                                               class="form-check-input rounded-2">
                                        <label class="form-check-label" for="_remember_me">
                                            {{ 'login.remember_me'|trans({}, 'front') }}
                                        </label>
                                    </div>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <button type="submit" class="btn auth-btn">
                                    <i class="fas fa-sign-in-alt"></i> {{ 'login.submit'|trans({}, 'front') }}
                                </button>
                            </form>

                            <div class="login-link">
                                <p>
                                    {{ 'login.no_account'|trans({}, 'front') }}
                                    <a href="{{ path('app_register') }}">{{ 'login.register'|trans({}, 'front') }}</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('assets/js/app/TogglePassword.js') }}"></script>
{% endblock %}
