{% extends 'base.html.twig' %}

{% block title %}F1Simulator - Rejestracja{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .registration-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #1a1a1a 100%);
            position: relative;
            overflow: hidden;
        }

        .registration-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%23ff0000" stroke-width="0.5" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.1;
        }

        .registration-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            border: 2px solid rgba(183, 28, 28, 0.2);
            position: relative;
            z-index: 1;
        }

        .registration-header {
            background: linear-gradient(135deg, #b71c1c 0%, #d32f2f 50%, #b71c1c 100%);
            color: white;
            border-radius: 18px 18px 0 0;
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .registration-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        }

        @keyframes shimmer {
            0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(0deg); }
            50% { transform: translateX(100%) translateY(100%) rotate(180deg); }
        }

        .registration-title {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
        }

        .registration-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-top: 0.5rem;
            position: relative;
            z-index: 1;
        }

        .form-container {
            padding: 3rem;
        }

        .form-group {
            margin-bottom: 2rem;
            position: relative;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1.5rem;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            background: #fafafa;
        }

        .form-control:focus {
            outline: none;
            border-color: #b71c1c;
            box-shadow: 0 0 0 3px rgba(183, 28, 28, 0.1);
            background: white;
        }

        .form-control:hover {
            border-color: #d32f2f;
            background: white;
        }

        .input-icon {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #b71c1c;
            font-size: 1.2rem;
        }

        .btn-register {
            background: linear-gradient(135deg, #b71c1c 0%, #d32f2f 100%);
            color: white;
            border: none;
            padding: 1.2rem 3rem;
            border-radius: 12px;
            font-size: 1.2rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(183, 28, 28, 0.3);
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .btn-register::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-register:hover::before {
            left: 100%;
        }

        .btn-register:hover {
            box-shadow: 0 12px 25px rgba(183, 28, 28, 0.4);
        }

        .login-link {
            text-align: center;
            margin-top: 2rem;
            color: #666;
        }

        .login-link a {
            color: #b71c1c;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .login-link a:hover {
            color: #d32f2f;
            text-decoration: underline;
        }

        .form-error {
            color: #d32f2f;
            font-size: 0.9rem;
            margin-top: 0.5rem;
            display: block;
        }

        .form-control.is-invalid {
            border-color: #d32f2f;
            box-shadow: 0 0 0 3px rgba(211, 47, 47, 0.1);
        }

        @media (max-width: 768px) {
            .registration-card {
                margin: 1rem;
                border-radius: 15px;
            }

            .form-container {
                padding: 2rem 1.5rem;
            }

            .registration-title {
                font-size: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="registration-container">
        <div class="container">
            <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="registration-card">
                        <div class="registration-header">
                            <h1 class="registration-title">
                                <i class="fas fa-flag-checkered"></i> Rejestracja
                            </h1>
                            <p class="registration-subtitle">Dołącz do F1 Simulator i rozpocznij swoją przygodę!</p>
                        </div>

                        <div class="form-container">
                            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="form-group">
                                <label class="form-label" for="{{ registrationForm.username.vars.id }}">
                                    <i class="fas fa-user"></i> Nazwa użytkownika
                                </label>
                                {{ form_widget(registrationForm.username, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Wprowadź nazwę użytkownika'
                                    }
                                }) }}
                                {{ form_errors(registrationForm.username) }}
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="{{ registrationForm.email.vars.id }}">
                                    <i class="fas fa-envelope"></i> Adres email
                                </label>
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Wprowadź adres email'
                                    }
                                }) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="{{ registrationForm.plainPassword.vars.id }}">
                                    <i class="fas fa-lock"></i> Hasło
                                </label>
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Wprowadź hasło (minimum 6 znaków)'
                                    }
                                }) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>

                            <button type="submit" class="btn btn-register">
                                <i class="fas fa-flag-checkered"></i> Zarejestruj się
                            </button>
                            {{ form_end(registrationForm) }}

                            <div class="login-link">
                                <p>Masz już konto? <a href="{{ path('app_login') }}">Zaloguj się</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
