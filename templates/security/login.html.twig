{% extends 'base.html.twig' %}

{% block title %}F1Simulator{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                <h3 class="text-center mb-5">Logowanie</h3>
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <label for="inputUsername">Użytkownik</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword">Hasło</label>
                        <input type="password" name="_password" id="inputPassword" class="form-control" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-outline-success" type="submit">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
