{% extends 'base.html.twig' %}

{% block title %}F1Simulator - Logowanie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="registration-container">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-6 col-md-8 col-sm-10">
                    <div class="registration-card">
                        <div class="registration-header">
                            <h1 class="registration-title">
                                <i class="fas fa-sign-in-alt"></i> Logowanie
                            </h1>
                            <p class="registration-subtitle">Witaj z powrotem w F1 Simulator!</p>
                        </div>

                        <div class="form-container">
                            <form method="post">
                                {% if error %}
                                    <div class="alert alert-danger mb-4">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-4 p-3 bg-success text-white rounded">
                                        <i class="fas fa-check-circle"></i>
                                        Jesteś zalogowany jako {{ app.user.username }}, 
                                        <a href="{{ path('app_logout') }}" class="text-white font-weight-bold">Wyloguj się</a>
                                    </div>
                                {% endif %}

                                <div class="form-group">
                                    <label class="form-label" for="inputUsername">
                                        <i class="fas fa-user"></i> Nazwa użytkownika
                                    </label>
                                    <input type="text" 
                                           value="{{ last_username }}" 
                                           name="_username" 
                                           id="inputUsername" 
                                           class="form-control" 
                                           placeholder="Wprowadź nazwę użytkownika"
                                           required 
                                           autofocus>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="inputPassword">
                                        <i class="fas fa-lock"></i> Hasło
                                    </label>
                                    <input type="password" 
                                           name="_password" 
                                           id="inputPassword" 
                                           class="form-control" 
                                           placeholder="Wprowadź hasło"
                                           required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <button type="submit" class="btn btn-register">
                                    <i class="fas fa-sign-in-alt"></i> Zaloguj się
                                </button>
                            </form>

                            <div class="login-link">
                                <p>Nie masz konta? <a href="{{ path('app_register') }}">Zarejestruj się</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
