<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}F1 Simulator{% endblock %}</title>
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('assets/favicon/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('assets/favicon/site.webmanifest') }}">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">            <script src="https://kit.fontawesome.com/0012002a90.js" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/css/utils.css') }}">
        {% endblock %}
        <meta name="Description" content="Simulate your f1 season as one of the drivers against computer, or compete against players.">
    </head>
    <body class="d-flex flex-column min-vh-100">
        {{ include('navbar.html.twig') }}

        <main class="flex-shrink-0 w-100">
            <div class="container">
                {% block messages %}
                    {% for msg in app.flashes('success') %}
                        <div class="alert alert-success mt-3">
                            {{ msg }}
                        </div>
                    {% endfor %}
                    {% for msg in app.flashes('error') %}
                        <div class="alert alert-danger mt-3">
                            {{ msg }}
                        </div>
                    {% endfor %}
                    {% for msg in app.flashes('warning') %}
                        <div class="alert alert-warning mt-3">
                            {{ msg }}
                        </div>
                    {% endfor %}
                {% endblock %}
            </div>

            {% block body %}{% endblock %}
        </main>

        {{ include('footer.html.twig') }}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
            <script src="{{ asset('assets/js/app/BlockButton.js') }}"></script>
        {% endblock %}
    </body>
</html>
