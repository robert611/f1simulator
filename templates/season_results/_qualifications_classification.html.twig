<div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Miejsce</th>
                    <th>Kierowca</th>
                    <th>Zespół</th>
                    <th>Bolid</th>
                </tr>
            </thead>
            <tbody>
                {% for result in currentDriverSeason.classification %}
                    <tr class={{ result.driver == currentDriverSeason.season.driver ? 'highlight-driver'}}>
                        <td>{{ result.position }}</td>
                        {% if result.driver == currentDriverSeason.season.driver %}
                            <td>{{ currentDriverSeason.season.user.username }}</td>
                        {% else %}
                            <td>{{ result.driver.fullName }}</td>
                        {% endif %}
                        <td>{{ result.driver.team.name }}</td>
                        <td>
                            <img alt="{{ result.driver.team.name }}-car" class="f1-car-picture" src="/assets/cars/{{result.driver.team.picture}}"/>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>