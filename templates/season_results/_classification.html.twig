<div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Miejsce</th>
                    <th>Kierowca</th>
                    <th>Zespół</th>
                    <th>Bolid</th>
                    <th>Punkty</th>
                </tr>
            </thead>
            <tbody>
                {% for driver in currentDriverSeason.classification %}
                    <tr class={{ currentDriverSeason.season and currentDriverSeason.season.driver == driver ? 'highlight-driver'}}>
                        <td>{{ driver.position }}</td>

                        {% if currentDriverSeason.season and currentDriverSeason.season.driver == driver %}
                            <td>{{ currentDriverSeason.season.user.username }}</td>
                        {% else %}
                            <td>{{ driver.name }} {{ driver.surname }}</td>
                        {% endif %}
                        
                        <td>{{ driver.team.name }}</td>
                        <td><img alt="{{ driver.team.name }}-car" class="f1-car-picture" src="/assets/cars/{{driver.team.picture}}"/></td>
                        <td> {{ driver.points }} </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>